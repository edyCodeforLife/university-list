{
    "compilerOptions": {
        "outDir": "./build/",
        "target": "es5",
        "module": "es2015",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["es5", "es2015", "dom", "scripthost"]
    },
    "exclude": ["node_modules"]
}
